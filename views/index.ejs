<!DOCTYPE html>
<html lang="en">
<%- include('partials/_head.ejs') %>
<body>
<%- include('partials/_header.ejs') %>
<main role="main" class="container mt-4">
  
  <input type="text" id="searchAssets" placeholder="Search assets..." class="form-control mt-4">
  
  <table class="table mt-3">
    <thead>
      <tr>
        <th>Logo</th>
        <th>Ticker</th>
        <th>Name</th>
        <th>Price</th>
        <th>Vote Count</th>
        <th>Comment Count</th>
        <th>Industry</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody id="assetsTable">
      <!-- Asset rows will be dynamically inserted using JavaScript -->
    </tbody>
  </table>
  
  <div id="popularConversations" class="mt-4">
    <!-- Popular conversations will be dynamically inserted using JavaScript -->
    <h3>Popular Conversations</h3>
    <div id="commentsContainer">
      <!-- Comments will be dynamically inserted using JavaScript -->
    </div>
  </div>
</main>
</body>
<%- include('partials/_footer.ejs') %>
<script src="/js/homePage.js"></script>
</html>